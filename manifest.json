{
	"name": "goguma-extention",
	"version": "1.0.0",
	"manifest_version": 3,
	"description": "右クリックメニューから韓国語解析", 
	"permissions" : [
		"contextMenus",
		"scripting",
		"tabs"
	],
	"host_permissions" : [
		"https://*/*"
	],
	"background" : {
		"service_worker" : "src/background.js",
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": [
				"https://*/*"
			],
			"run_at":"document_idle",
			"js": ["dist/content.js"]
		}
	],
	"icons": {
		"16": "icon/icon16.png",
		"48": "icon/icon48.png",
		"128": "icon/icon128.png"
	},
	"author": "mnmandahalf"
}
