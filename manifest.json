{
	"name": "goguma",
	"version": "0.0.1",
	"manifest_version": 3,
	"description": "右クリックメニューから韓国語解析。選択範囲の文章を品詞分解、ルビ振り、翻訳を行います。", 
	"permissions" : [
		"contextMenus",
		"tabs"
	],
	"background" : {
		"service_worker" : "src/background.js",
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": [
				"https://*/*"
			],
			"run_at":"document_idle",
			"js": ["dist/content.js"]
		}
	],
	"icons": {
		"16": "icon/icon16.png",
		"48": "icon/icon48.png",
		"128": "icon/icon128.png"
	},
	"author": "mnmandahalf"
}
